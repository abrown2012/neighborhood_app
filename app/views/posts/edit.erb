<form class="form-horizontal" action="/feed/<%=current_post.id%>/edit" method="POST">
    <input type="hidden" name="_method" value="PATCH">
    <div class="form-group"> 
        <label class="control-label col-sm-10 font-weight-bold" for="title">Title: </label> 
        <div class="col-sm-10">
            <input type="text" class="form-control" name="title" placeholder="Title:" value="<%=Post.find(params["id"]).title%>">
        </div> 
    </div> 
    <br>
    <div class="form-group">   
        <label class="control-label col-sm-10 font-weight-bold" for="text">Your Post: </label>
        <div class="col-sm-10">
            <textarea type="text" rows="7" class="form-control" name="text"><%=Post.find(params["id"]).text%></textarea>
        </div> 
    </div> 
    <br>
    <div class="form-group">
        <label class="control-label col-sm-10 font-weight-bold" for="text">Neighborhood:</label>
    </div>
    <div class="control-label col-sm-10 font-weight-bold"> 
        <select class="custom-select custom-select-lg mb-3" type="dropdown" name="post[neighborhood_id]" required>
            <option value="" disabled selected>Neighborhood</option>
            <% Neighborhood.select(:neighborhood_name, :id).each do |n|%>
                <option value="<%= n.id %> id="<%=n.id %>" <%="selected" if current_post.neighborhood == n %> ><%=n.neighborhood_name%></option>
            <% end %>
        </select>
</div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10 text-center">
            <input type="submit" class="btn btn-success" value="Update Post">
        </div>

    </div>
</form>
<div class="col-sm-offset-2 col-sm-10">
    <form class="form-horizontal text-center" action="/feed/<%=current_post.id%>/delete" method="POST">
        <input type="hidden" name="_method" value="DELETE">
        <input type="submit" value="Delete" class="btn btn-danger">
    </form>
</div>