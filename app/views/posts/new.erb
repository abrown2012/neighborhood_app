<div class="container-box">
  <h3>Write your new post here</h3>
  <br>
  <form class="form-stretch" action="/posts/new" method="POST">
    <div class="mb-1 row">
      <div class="col-md-6">
        <input type="text" name="title" placeholder="Title" required>
      </div>
    </div>
    <div class="mb-1 row">
      <div class="col-md-6">
        <input type="text" name="text" placeholder="What's on your mind?" required>
      </div>
    </div> 
    <div class="mb-1 row">
      <div class="col-md-6">
        <label for="datetime">Select neighborhood that will see your post:</label>
      </div> 
    </div>
    <div class="mb-1 row">
      <div class="col-md-6">
      <select type="dropdown" name="post[neighborhood_id]" required> 
        <option value="" disabled selected>Select neighborhood</option>    
          <% Neighborhood.select(:neighborhood_name, :id).each do |n|%>
            <option value="<%= n.id %>" id="<%= n.id %>"/><%= n.neighborhood_name %></option>
          <% end %>
      </select>
      </div>
    </div>
    <div class="row justify-content-md-center"> 
      <input type="submit" class="btn btn-primary" value="Submit">
    </div>
  </form>
</div>