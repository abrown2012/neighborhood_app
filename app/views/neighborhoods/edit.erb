<div class="col-sm-6 col-md-12">
    <div class="card shadow p-3 mb-5 bg-white rounded">
        <div class="p-3 mb-2 bg-primary text-white rounded">
            <div class="font-weight-bold text-center">MAKE CHANGES TO YOUR NEIGHBORHOOD HERE</div>
        </div>
        <form class="form-horizontal" action="/neighborhoods/<%= current_neighborhood.id%>/edit" method="POST">
            <input type="hidden" name="_method" value="PATCH">
            <div class="form-group"> 
                <label class="control-label col-sm-10 font-weight-bold" for="neighborhood_name">Name: </label> 
                <div class="col-sm-10">
                    <input type="text" class="form-control" name="neighborhood[neighborhood_name]" value="<%=current_neighborhood.neighborhood_name%>">
                </div> 
                <br>
                <label class="control-label col-sm-10 font-weight-bold" for="city">City: </label> 
                <div class="col-sm-10">
                    <input type="text" class="form-control" name="neighborhood[city]" value="<%=current_neighborhood.city%>">
                </div> 
                <br>
                <label class="control-label col-sm-10 font-weight-bold" for="state">State: </label>
                <div class="col-sm-10"> 
                    <select class="custom-select custom-select-lg mb-3" type="dropdown" name="neighborhood[state]" required>
                        <option value="" disabled selected>State</option>
                            <% all_states.each do |s|%>
                            <option value="<%= s %>" id="<%=s %>" <%="selected" if current_neighborhood.state == s %> ><%=s%></option>
                            <% end %>
                    </select> 
                </div>
            </div>



    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10 text-center">
            <input type="submit" class="btn btn-success" value="Update Neighborhood">
        </div>

    </div>
</form>
</div>